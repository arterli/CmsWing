{
  "type": "page",
  "body": [

    {
      "type": "service",
      "api": "/admin/cms/template/info?uuid=${params.uuid}",
      "body": [
        {
          "type": "card",
          "header": {
            "title": "$info.name",
            "subTitle": "目录：app/view/cms/${info.path}-${info.uuid}",
            "description": "作者：${info.author}",
            "avatarClassName": "pull-left thumb-md b-3x m-r",
            "avatar": "$info.preview"
          },
          "toolbar": [
            {
              "type": "tpl",
              "tpl": "使用中",
              "className": "label label-danger",
              "visibleOn": "${info.isu}"
            }
          ],
          "actions": [
            {
              "type": "button",
              "label": "返回",
              "icon": "fa-solid fa-chevron-left",
              "actionType": "link",
              "link": "/cms/template"
            },
            {
              "type": "button",
              "icon": "fa-solid fa-pen-to-square",
              "label": "编辑",

              "actionType": "dialog",
        "level": "primary",
        "align": "right",
        "dialog": {
          "title": "新增模板",
          "body": {
            "type": "form",
            "api": "/admin/cms/template/edit",
            "body": [
              {
                "type": "input-text",
                "name": "info.name",
                "label": "模板名称",
                "required": true
              },
              {
                "type": "divider"
              },
              {
                "type": "input-text",
                "name": "info.author",
                "label": "模板作者",
                "required": true
              },
              {
                "type": "divider"
              },
              {
                "type": "input-text",
                "name": "info.version",
                "label": "版本号",
                "required": true
              },
              {
                "type":"hidden",
                "name":"info.uuid"
              }
            ]
          }
        }
            }
          ]
        }
      ]
    },
    {
      "id": "tableList",
      "type": "crud",
      "api": {
        "url": "/admin/cms/template/list",
        "data": {
          "&": "$$",
          "template_uuid": "${params.uuid}"
        }
      },
      "itemBadge": {
        "text": "使用",
        "mode": "ribbon",
        "position": "top-left",
        "level": "success",
        "visibleOn": "${isu}"
      },
      "syncLocation": true,
      "headerToolbar": [
        {
          "type": "form",
          "mode": "horizontal",
          "wrapWithPanel": false,
          "onEvent": {
            "change": {
              "actions": [
                {
                  "actionType": "reload",
                  "componentId": "tableList",
                  "args": {
                    "cat": "${event.data.cat}"
                  }
                }
              ]
            }
          },
          "body": [
            {
              "label": false,
              "type": "list-select",
              "multiple": false,
              "labelClassName": "text-muted",
              "name": "cat",
              "inline": true,
              "value": "index",
              "options": [
                {
                  "label": "首页模板",
                  "value": "index"
                },
                {
                  "label": "列表模板",
                  "value": "list"
                },
                {
                  "label": "详情模板",
                  "value": "detail"
                },
                {
                  "label": "公共模板",
                  "value": "inc"
                },
                {
                  "label": "评论模板",
                  "value": "comment"
                }
              ]
            }
          ]
        },
        {
          "type": "columns-toggler",
          "align": "right"
        },
        {
          "label": "新增模板",
          "type": "button",
          "actionType": "drawer",
          "level": "primary",
          "align": "right",
          "drawer": {
            "title": "新增模板",
            "size": "xl",
            "position": "right",
            "body": {
              "type": "form",
              "api": "/admin/cms/template/listadd",
              "body": [
                {
                  "type": "input-text",
                  "name": "title",
                  "label": "模板名称",
                  "required": true
                },
                {
                  "type": "divider"
                },
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "文件名称",
                  "required": true,
                  "description": "app/view/cms/${info.path}-${info.uuid}/${cat?cat:'index'}_${name}.html"
                },
                {
                  "type": "divider"
                },
                {
                  "type": "editor",
                  "size": "xl",
                  "name": "html",
                  "label": "模板代码",
                  "placeholder": "请输入",
                  "language": "html",
                  "required": true
                },
                {
                  "type": "hidden",
                  "name": "type",
                  "value": "${cat?cat:'index'}"
                },
                {
                  "type": "hidden",
                  "name": "template_uuid",
                  "value": "${info.uuid}"
                },
                {
                  "type": "hidden",
                  "name": "path",
                  "value": "${info.path}-${info.uuid}"
                }
              ]
            }
          },
          "id": "u:c38154c3ee32"
        }
      ],
      "columns": [
        {
          "name": "id",
          "label": "ID"
        },
        {
          "name": "title",
          "label": "模板名称"
        },
        {
          "name": "name",
          "label": "文件名称",
          "type": "tpl",
          "tpl": "app/view/cms/${info.path}-${info.uuid}/${type}_${name}.html"
        },
        {
          "type": "operation",
          "label": "操作",
          "buttons": [
            {
              "type": "button",
              "label": "使用",
              "actionType": "ajax",
              "level": "link",
              "className": "text-danger",
              "confirmText": "确定要使用该首页模板吗？",
              "api": "get:/admin/cms/template/listuse?uuid=$uuid",
              "visibleOn": "${!isu && cat ==='index'}"
            },
            {
              "label": "编辑",
              "type": "button",
              "level": "link",
              "actionType": "drawer",
              "drawer": {
                "title": "编辑模板",
                "size": "xl",
                "position": "right",
                "body": {
                  "type": "form",

                  "api": "/admin/cms/template/listedit",
                  "body": [
                    {
                      "type": "input-text",
                      "name": "title",
                      "label": "模板名称",
                      "required": true
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "input-text",
                      "name": "name",
                      "label": "文件名称",
                      "required": true,
                      "disabled": true,
                      "description": "app/view/cms/${info.path}-${info.uuid}/${cat?cat:'index'}_${name}.html"
                    },
                    {
                      "type": "divider"
                    },
                    {
                      "type": "editor",
                      "size": "xl",
                      "name": "html",
                      "label": "模板代码",
                      "placeholder": "请输入",
                      "language": "html",
                      "required": true
                    },
                    {
                      "type": "hidden",
                      "name": "type",
                      "value": "${cat?cat:'index'}"
                    },
                    {
                      "type": "hidden",
                      "name": "template_uuid",
                      "value": "${info.uuid}"
                    },
                    {
                      "type": "hidden",
                      "name": "path",
                      "value": "${info.path}-${info.uuid}"
                    },
                    {
                      "type": "hidden",
                      "name": "uuid"
                    }
                  ]
                }
              }
            },
            {
              "type": "button",
              "label": "删除",
              "actionType": "ajax",
              "level": "link",
              "className": "text-danger",
              "confirmText": "确定要删除？",
              "api": "get:/admin/cms/template/listdel?uuid=$uuid",
              "visibleOn": "${!isd && !isu}"
            }
          ]
        }
      ]
    }
  ]
}
